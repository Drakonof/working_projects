#ifndef __PLATFORM_H_
#define __PLATFORM_H_

#include "xstatus.h"

#define PLATFORM_ZYNQ

#define M_XST_SUCCESS_if(exp, msg_1, msg_2)      \
    do {                                         \
        if (M_XST_SUCCESS != exp) {              \
        	if (NULL != msg_1) {                 \
                xil_printf("%s\n\r",msg);        \
            }                                    \
                                                 \
            if (NULL != msg_2) {                 \
                xil_printf("%s%d\n\r",msg, exp); \
            }                                    \
            return exp;                          \
        }                                        \
    } while(0)


void init_platform();
void cleanup_platform();
void platform_setup_timer();
void platform_enable_interrupts();
#endif
